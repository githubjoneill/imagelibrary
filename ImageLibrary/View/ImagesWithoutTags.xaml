<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageLibrary.View.ImagesWithoutTags"
              xmlns:model="clr-namespace:ImageLibrary.Model"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:ImageLibrary.ViewModel"
             Title="Untagged images">

    <Grid Margin="8,0,8,0" RowDefinitions="auto,auto,*" ColumnDefinitions="*,*,*,*">
        <VerticalStackLayout>
            <Label 
            Text="Below are images that have not been assigned any tags. SAD!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </VerticalStackLayout>
        <CollectionView
                ItemsSource="{Binding UntaggedImageFiles}"
                SelectionMode="Multiple"
                SelectedItems="{Binding SelectedImageFiles, Mode=TwoWay}"
                SelectionChangedCommand="{Binding SelectionHasChangedCommand}"
                SelectionChangedCommandParameter="{Binding .}"
                ItemsLayout="VerticalGrid, 4"
                >
           
        </CollectionView>
    </Grid>
   
</ContentPage>